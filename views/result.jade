doctype html
html
    head
        title Puzzle
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css') 

    body
        div.container-md(style='padding:20px;display:flex;flex-direction:column;justify-content:center;align-items:center')
            img(src="/asset/kavi2-removebg-preview.png", alt="" style='width:5%;position:absolute;top:2%;right:4%')
            div(style='display:flex;flex-direction:column;justify-content:center') 
                h1(style="text-align:center;color:white;margin-top:5%") Result
                div(style="display:flex;flex-direction:row:justify-content:space-between;align-items:center;margin-top:2%;margin-left:3%;background-color: #5c99f5;;padding:5%;border-radius:.5em") 
                    div
                        h1(style="text-align:center;color:white;") Total Questions : #{total}
                        h1(style="text-align:center;color:white;") Correct Answers: #{correct}
                    img(src="/asset/happy.png" style="width:30%;margin-left:4%") 
                a(href='/post/level' style="margin-left:42%;margin-top:2%").answerSuAndRe Finish