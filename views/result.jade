doctype html
html
    head
        title Puzzle
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css') 

    body
        div.container-md.viewpageContainer
            div.headerViewpage 
            div
                div.main-div-result 
                    h1.result-header-div Result
                    div.result-div-1 
                        div
                            h1.question-answer Total Questions : #{total}
                            h1.question-answer Correct Answers: #{correct}
                        img(src="/asset/congratulations-4121.gif").result-img-div 
                    if(avail ==1) 
                        a(href='/post/student' style="margin-left:42%;margin-top:3%;padding-top:.7%").answerSuAndRe.back Finish
                    else 
                        a(href='/post/level' style="margin-left:42%;margin-top:3%;padding-top:.7%").answerSuAndRe.back Finish
    script(type="text/javascript" src="/header.js")
    script.     
            if(#{mode} ==1){
                document.querySelector('.back').style.backgroundColor='yellow'
                document.querySelector('.back').style.color='black'
                let audiSub =document.createElement('audio')
                let source =document.createElement('source')
                source.src='/asset/finish.mp3'
                audiSub.append(source)
                audiSub.play()
                document.addEventListener('click',()=>{
                    if(#{avail} ==1){
                        location.replace('/post/student')
                    }else{
                        location.replace('/post/level')
                    }
                })
            }else{
                document.querySelector('.back').addEventListener('click',()=>{
                    location.replace('/post/level')
                })
            }
