doctype html
html
    head
        title Puzzle
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css') 

    body
        div.container-md.viewpageContainer
            div.headerViewpage 
            h4(style='color:white;') Note: Edit the word and upload respective audio file.
            div.edit-content-div.edit-margin-top-div
                each items in edit
                    form(action="/post/editThree" method="post" enctype="multipart/form-data" ).edit-form-tag 
                        div.edit-div-content
                            div 
                                p.edit-p-tag Word 1 
                                input(type="text" name="Word1" value="#{items.Word1}").edit-input-field
                            div.edit-audio-div
                                p.edit-p-tag Audio 1
                                input(type="file" name="audioEdit").input-file-tag-edit
                            div.audio-tag-div   
                                p.edit-pre-tag-p Pervious Audio 1   
                                audio(controls='' ).audio-height
                                    source(src="/uploaded files/#{items.Audio1}" )
                        div.edit-div-content   
                            div 
                                p.edit-p-tag Word 2 
                                input(type="text" value="#{items.Word2}" name="Word2").edit-input-field
                            div.edit-audio-div
                                p.edit-p-tag Audio 2
                                input(type="file" name="audioEdit").input-file-tag-edit
                            div.audio-tag-div 
                                p.edit-pre-tag-p Pervious Audio 2    
                                audio(controls='' style="float:right").audio-height
                                    source(src="/uploaded files/#{items.Audio2}")
                        div.edit-div-content  
                            div 
                                p.edit-p-tag Word 3 
                                input(type="text" value="#{items.Word3}" name="Word3").edit-input-field
                            div.edit-audio-div 
                                p.edit-p-tag Audio 3
                                input(type="file" name="audioEdit").input-file-tag-edit
                            div.audio-tag-div 
                                p.edit-pre-tag-p Pervious Audio 3   
                                audio(controls='' style="float:right").audio-height
                                    source(src="/uploaded files/#{items.Audio3}")
                        div.form-bottom-btn-edit 
                            button(style="padding-top:0;width:15%").sub-edit  submit 
                            a(href="/post/continue" style="width:15%;padding-left:4.6%;margin-left:20%").back-edit Back              

