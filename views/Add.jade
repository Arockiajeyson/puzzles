                                },
                                error: function(err) {
                                console.log(err);
                                }
                            });
                       }
                    });
                    $('.five').click(function() {
                        if(inp.value ==""){
                            alertHeader.style.display='inline'
                            alertHeader.innerHTML ='Please Enter Exercise Name'
                        }else{
                            document.querySelector(".five").setAttribute("href", "/post/fiveWord");
