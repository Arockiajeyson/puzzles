        script(src='https://code.jquery.com/jquery-3.6.0.min.js') 
        script(type="text/javascript" src="/header.js")       
        script. 
                let inp =document.querySelector('.inputEX')
                document.querySelector(".three").removeAttribute("href")
                document.querySelector(".four").removeAttribute("href")
                document.querySelector(".five").removeAttribute("href")
                //- console.log(myva)
                let alertHeader =document.querySelector('.header-alert')
                alertHeader.style.display='none'
                $(document).ready(function() {
                    $('.inputEX').focus(function() {
                        alertHeader.style.display='none'
                        alertHeader.innerHTML=""
                    });
                });
                $(document).ready(function() {
                    $('.three').click(function() {
                        if(inp.value ==""){
                            alertHeader.style.display='inline'
                            alertHeader.innerHTML ='Please Enter Exercise Name'
                        }else{
                            document.querySelector(".three").setAttribute("href", "/post/threeWord");
                            var myData = 3;
                        $.ajax({
                            url: "/post/exerciseNameStoring",
                            method: "POST",
                            data: { myData: myData, input: inp.value },
                            success: function(response) {
                            console.log(response);
                            },
                            error: function(err) {
                            console.log(err);
                            }
                        });
                        }
                    });
                    $('.four').click(function() {
                       if(inp.value ==""){
                            alertHeader.style.display='inline'
