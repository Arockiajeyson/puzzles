    body
        div.container-md.viewpageContainer
            div.headerViewpage 
            h4.edit-four-word-heading.edit-heading-margin-top Note: Edit the word and upload respective audio file.
            div.edit-content-div.edit-margin-top-div-four
                each items in edit
                    form(action="/post/editFour" method="post" enctype="multipart/form-data" ).edit-form-tag 
                        div.edit-div-content
                            div 
                                p.edit-p-tag Word1 
                                input(type="text" name="Word1" value="#{items.Word1}").edit-input-field
                            div 
                                p.edit-p-tag Audio1
                                input(type="file" name="audioEdit" style="height:40px").input-file-tag-edit
                            div.audio-tag-div  
                                p.edit-pre-tag-p Pervious Audio 1    
                                audio(controls='' ).audio-height
                                    source(src="/uploaded files/#{items.Audio1}" )
                        div.edit-div-content
                            div 
                                p.edit-p-tag Word2 
                                input(type="text" value="#{items.Word2}" name="Word2").edit-input-field
                            div 
                                p.edit-p-tag Audio2
                                input(type="file" name="audioEdit" style="height:40px").input-file-tag-edit
                            div.audio-tag-div  
                                p.edit-pre-tag-p Pervious Audio 2   
                                audio(controls='' style="float:right").audio-height
                                    source(src="/uploaded files/#{items.Audio2}")
                        div.edit-div-content
                            div 
                                p.edit-p-tag Word3 
                                input(type="text" value="#{items.Word3}" name="Word3" ).edit-input-field
                            div 
                                p.edit-p-tag Audio3
                                input(type="file" name="audioEdit" style="height:40px").input-file-tag-edit
                            div.audio-tag-div  
                                p.edit-pre-tag-p Pervious Audio 3   
                                audio(controls='' style="float:right").audio-height
                                    source(src="/uploaded files/#{items.Audio3}")
                        div.edit-div-content  
                            div 
                                p.edit-p-tag Word4
                                input(type="text" value="#{items.Word4}" name="Word4").edit-input-field
                            div 
                                p.edit-p-tag Audio4
                                input(type="file" name="audioEdit" style="height:40px").input-file-tag-edit
                            div.audio-tag-div
                                p.edit-pre-tag-p Pervious Audio 4     
                                audio(controls='' style="float:right").audio-height
                                    source(src="/uploaded files/#{items.Audio4}")                
                        div.form-bottom-btn-edit 
                            button(style="padding-top:0;width:15%").sub-edit  submit 
                            a(href="/post/continue" style="width:15%;padding-left:4.6%;margin-left:20%").back-edit Back              

