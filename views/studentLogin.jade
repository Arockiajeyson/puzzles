doctype html
html
    head
        title Puzzle
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css') 

    body
        div.container-md(style='padding:20px;display:flex;flex-direction:column;justify-content:center;align-items:center;position:relative')
            img(src="/asset/kavi2-removebg-preview.png", alt="" style='width:7%;padding:.5em;position:absolute;right:0;top:2%')
            h1(style='color:white;margin-top:1em') Login with email ID...
            div.button-class-1(style='height:350px').content 
                input(type="email" placeholder="Enter admin email ID...").emailId
                input(type="password" placeholder="Enter password" style="margin-top:4%").password
                button.btnCon Contiune 
                button(style="margin-top:6%").back Back
                
        script(src='https://code.jquery.com/jquery-3.6.0.min.js')        
        script.
                let val = document.querySelector('.emailId')
                let pass =document.querySelector('.password')
                $(document).ready(function() {
                    $('.btnCon').click(function() {
                        
                        if(val.value !=""){
                            $.ajax({
                                url: "/post/studentAdminEmailID",
                                method: "POST",
                                data: {email: val.value , password:pass.value},
                                success: function(response) {
                                    if(response =="done"){
                                        location.replace("/post/student")
                                    }else if(response =="password worng"){
                                        alert('Enter correct passowrd')
                                    }else{
                                        location.reload()
                                    }
                                },
                                error: function(err) {
                                console.log(err);
                                }
                            });
                        }else{
                            alert('Please enter mail Id')
                        }
                    
                    });

                    $('.back').click(function() {
                        
                        location.replace("/")
                    
                    });
                    
                });          