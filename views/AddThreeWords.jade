doctype html 
html 
    head 
        title Admin
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css')
    body(style='background-color:#C1D0B5') 
        div.container-md.viewpageContainer
            div.headerViewpage 
            h3.head-h4 Note: Enter the word and audio in the correct format 
            div.threeWords.addmargin 
                div.addSentence
                    form(action="/post/threeworddata" method='POST' enctype="multipart/form-data") 
                        p.exercise-name Exercise Name : #{data} 
                        div.threeword-divs 
                            div 
                                p.word-p Enter word 1 :
                                input(type="text" name='word1' required).input-word
                            div(style='float:right') 
                                p.word-p Audio 1 :
                                input(type="file" name='audioFiles' required).input-file-word.file-1.height-adjection    
                        div.threeword-divs
                            div.div-three-word-div 
                                p.word-p Enter word 2 :
                                input(type="text" name='word2' required).input-word
                            div(style='float:right').div-three-word-div  
                                p.word-p Audio 2 :
                                input(type="file" name='audioFiles' required).input-file-word.file-2.height-adjection
                        div.threeword-divs
                            div.div-three-word-div-1 
                                p.word-p Enter word 3 :
                                input(type="text" name='word3' required).input-word
                            div(style='float:right').div-three-word-div-1 
                                p.word-p Audio 3 :
                                input(type="file" name='audioFiles' title='good' required).input-file-word.file-3.height-adjection
                        div.bottom-div-btn 
                            button.btn.btn-1-bottom-word.sub.btn-width.btn-width-right.padding-bottom Submit 
                            a(href='/post/add').sub.back-btn-word.btn-width.btn-width-left.padding-bottom Back        
        script(type="text/javascript" src="/header.js")
