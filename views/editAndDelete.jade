doctype html
html
    head
        title Puzzle
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css') 

    body
        div.container-md(style='padding:20px;display:flex;flex-direction:column;justify-content:center;align-items:center')
            img(src="/asset/kavi2-removebg-preview.png", alt="" style='width:5%;position:absolute;top:2%;right:4%')
            h1(style='color:white;margin-top:1em') Select the exercise name and click the continue button...
            div(style='width:30%')
                form(action="" method='POST' enctype="multipart/form-data" style='display:flex;flex-direction:column;width:100%').content.button-class-1  
                    select#exercise(name='exercise' style='width:100%;height:15%;border-radius:.3em;font-size:1.3em' value="select")
                        option Select the exercise name...
                        each items in exercisename
                            option(value="#{items.exerciseName}")=items.exerciseName
                    a(href='/post/continue').quit-a.clicking Continue
                    a(href='/post/adminbtn' style='margin-top:2em').quit-a Back   


        script(src='https://code.jquery.com/jquery-3.6.0.min.js')        
        script. 
                let inp =document.querySelector('#exercise')
                $(document).ready(function() {
                    $('.clicking').click(function() {
                    $.ajax({
                        url: "/post/exerciseDate",
                        method: "POST",
                        data: {name: inp.value },
                        success: function(response) {
                        console.log(response);
                        },
                        error: function(err) {
                        console.log(err);
                        }
                    });
                    });
                });