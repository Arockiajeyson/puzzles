html 
    head 
        title Admin
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='/style.css')
    body
        div.container-md.viewpageContainer 
            div.headerViewpage 
            h3.head-h4 Note: Enter the word and audio in the correct format             
            div.fourWords.addmargin-four 
                div.addSentence
                    form(action="/post/fourworddata" method='POST' enctype="multipart/form-data")  
                        p.exercise-name Exercise Name : #{data}
                        div.threeword-divs.margin-minus 
                            div 
                                p.word-p Enter word 1 :
                                input(type="text" name='word1' required).input-word
