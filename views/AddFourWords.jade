                                p.word-p Audio 1 :
                                input(type="file" name='audioFiles1' required).input-file-word.height-adjection-four-word    
                        div.threeword-divs.margin-minus  
                            div 
                                p.word-p Enter word 2 :
                                input(type="text" name='word2' required).input-word
                            div(style='float:right') 
                                p.word-p Audio 2 :
                                input(type="file" name='audioFiles1' required).input-file-word.height-adjection-four-word
                        div.threeword-divs.margin-minus  
                            div 
                                p.word-p Enter word 3 :
                                input(type="text" name='word3' required).input-word
                            div(style='float:right') 
                                p.word-p Audio 3 :
                                input(type="file" name='audioFiles1' required).input-file-word.height-adjection-four-word
                        div.threeword-divs.margin-minus  
                            div 
                                p.word-p Enter word 4 :
                                input(type="text" name='word4' required).input-word
                            div(style='float:right') 
                                p.word-p Audio 4 :
                                input(type="file" name='audioFiles1' required).input-file-word.height-adjection-four-word      
                        div.bottom-div-btn.four-btn-bottom-div
                            button.sub.btn.btn-1-bottom-word.btn-width.four-btn Submit 
                            a(href='/post/add').sub.back-btn-word.btn-width.four-btn-left Back        
